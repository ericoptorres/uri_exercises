function findLongestWordLength(str) {
    let strSepareted = str.split(' ')
    let bigger = 0
    let i = strSepareted.length - 1

    console.log(i)
    while (i > -1){
        if (strSepareted[i].length > bigger){
            bigger = strSepareted[i].length
        }
        i--
    }
    return bigger;
  }
  
  findLongestWordLength("The quick brown fox jumped over the lazy dog");